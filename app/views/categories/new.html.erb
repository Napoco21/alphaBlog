<h1 align="center">Create new category</h1>

<%= render "partials/errors", obj: @category %>


<!-- form_for for autogeneratin html forms code -->
<%= form_for(@category, :html =>{class: "form-horizontal", role: "form"}) do |f| %>
  <div class='form-group'>
    <div class='control-label col-sm-2'>

      <%= f.label :name %>
    </div>
    <div class='col-sm-8'>
      <%= f.text_field :name ,class:'form-control',placeholder: "Category name", autofocus: true %>
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10"><!-- RoR good conditionals logic -->
      <%= f.submit class: 'btn btn-primary btn-lg' %><!-- name button here -->
    </div>
  </div>
<% end %>
<div class="col-xs-4 col-xs-offset-5">
    [<%= link_to "Cancel request and return to articles listing", articles_path %>]
</div>
